@using Csira.Services.Issues
@model Csira.Web.Models.Issues.IssuesIndexViewModel
@{
    ViewData["Title"] = "Issues";

    var createdSortIndicator = Model.Sort switch
    {
        IssueSortOption.CreatedAtAsc => "↑",
        IssueSortOption.CreatedAtDesc => "↓",
        _ => string.Empty
    };

    var nameSortIndicator = Model.Sort switch
    {
        IssueSortOption.NameAsc => "↑",
        IssueSortOption.NameDesc => "↓",
        _ => string.Empty
    };

    var prioritySortIndicator = Model.Sort switch
    {
        IssueSortOption.PriorityAsc => "↑",
        IssueSortOption.PriorityDesc => "↓",
        _ => string.Empty
    };

    var nextCreatedSort = Model.Sort == IssueSortOption.CreatedAtDesc
        ? IssueSortOption.CreatedAtAsc
        : IssueSortOption.CreatedAtDesc;

    var nextNameSort = Model.Sort == IssueSortOption.NameAsc
        ? IssueSortOption.NameDesc
        : IssueSortOption.NameAsc;

    var nextPrioritySort = Model.Sort == IssueSortOption.PriorityAsc
        ? IssueSortOption.PriorityDesc
        : IssueSortOption.PriorityAsc;

    var pageItems = BuildPageItems(Model.PageNumber, Model.TotalPages);
}

<h1>Issues</h1>

<table class="table table-striped table-hover align-middle mt-4">
    <thead>
        <tr>
            <th scope="col">
                <a class="link-dark text-decoration-none"
                   asp-controller="Issues"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sort="@nextCreatedSort">
                    Created At @createdSortIndicator
                </a>
            </th>
            <th scope="col">
                <a class="link-dark text-decoration-none"
                   asp-controller="Issues"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sort="@nextNameSort">
                    Name @nameSortIndicator
                </a>
            </th>
            <th scope="col">
                <a class="link-dark text-decoration-none"
                   asp-controller="Issues"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sort="@nextPrioritySort">
                    Priority @prioritySortIndicator
                </a>
            </th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model.Issues)
        {
            <tr>
                <td>@issue.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@issue.Name</td>
                <td>@issue.Priority</td>
                <td>
                    <a asp-controller="Issues" asp-action="Details" asp-route-id="@issue.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
    <span>
        Total: @Model.TotalCount issues
    </span>
    <nav aria-label="Issue list pagination">
        <ul class="pagination mb-0">
            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-controller="Issues"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sort="@Model.Sort">Previous</a>
            </li>
            @foreach (var pageItem in pageItems)
            {
                if (pageItem is null)
                {
                    <li class="page-item disabled"><span class="page-link">..</span></li>
                }
                else
                {
                    var pageNumber = pageItem.Value;
                    <li class="page-item @(pageNumber == Model.PageNumber ? "active" : string.Empty)">
                        <a class="page-link"
                           asp-controller="Issues"
                           asp-action="Index"
                           asp-route-pageNumber="@pageNumber"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-sort="@Model.Sort">@pageNumber</a>
                    </li>
                }
            }
            <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : string.Empty)">
                <a class="page-link"
                   asp-controller="Issues"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sort="@Model.Sort">Next</a>
            </li>
        </ul>
    </nav>
    <form method="get"
          asp-controller="Issues"
          asp-action="Index"
          class="d-flex align-items-center gap-2 mb-0">
        <label for="pageSizeBottom" class="form-label mb-0">Page size</label>
        <input type="hidden" name="pageNumber" value="1" />
        <input type="hidden" name="sort" value="@Model.Sort" />
        <select id="pageSizeBottom"
                name="pageSize"
                class="form-select form-select-sm"
                onchange="this.form.submit()">
            @foreach (var option in new[] { 10, 20, 50 })
            {
                <option value="@option" selected="@(Model.PageSize == option)">@option</option>
            }
        </select>
    </form>
</div>

@functions {
    private static IReadOnlyList<int?> BuildPageItems(int currentPage, int totalPages)
    {
        var pageNumbers = new SortedSet<int> { 1, totalPages };
        for (var page = currentPage - 2; page <= currentPage + 2; page++)
        {
            if (page >= 1 && page <= totalPages)
            {
                pageNumbers.Add(page);
            }
        }

        var items = new List<int?>();
        int? previousPage = null;

        foreach (var page in pageNumbers)
        {
            if (previousPage.HasValue && page - previousPage.Value > 1)
            {
                items.Add(null);
            }

            items.Add(page);
            previousPage = page;
        }

        return items;
    }
}
