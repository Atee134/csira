{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Csira.Web (HTTP)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Csira.Web",
      "program": "${workspaceFolder}/Csira.Web/bin/Debug/net10.0/Csira.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Csira.Web",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5144"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(http://\\S+)"
      }
    },
    {
      "name": "Csira.Web (HTTPS + HTTP)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Csira.Web",
      "program": "${workspaceFolder}/Csira.Web/bin/Debug/net10.0/Csira.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Csira.Web",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:7079;http://localhost:5144"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      }
    }
  ]
}
